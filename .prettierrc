{
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 80,
  "arrowParens": "always",
  "importOrder": [
    "^(react)(.*)$",
    "^[^@/].*$",
    "^@/utils/(.*)$",
    "^@/api/(.*)$",
    "^@/types/(.*)$",
    "^@/queries/(.*)$",
    "^@/hooks/(.*)$",
    "^@/components/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
